{
  "name": "shopapicz/client",
  "description": "ShopAPI client",
  "minimum-stability": "stable",
  "license": "MIT",
  "keywords": [
    "shopapi"
  ],
  "authors": [
    {
      "name": "Petr Soukup",
      "email": "soukup@simplia.cz"
    }
  ],
  "require": {
    "ext-xmlreader": "*",
    "lib-libxml": ">=2.6.20",
    "lib-curl": "*",
    "php": ">=7.1.0",
    "guzzlehttp/psr7": "~1.4",
    "ext-curl": "*",
    "ext-SimpleXML": "*",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "~9.0"
  },
  "suggest": {
    "composer/ca-bundle": "Https certificates bundle"
  },
  "autoload": {
    "psr-4": {
      "ShopAPI\\Client\\": "src/"
    },
    "files": [
      "src/exceptions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "ShopAPI\\TestClient\\": "tests/"
    }
  }
}
